## FiveM Server Configuration

# Server endpoint - Change to your server IP
endpoint_add_tcp "0.0.0.0:30120"
endpoint_add_udp "0.0.0.0:30120"

# Server name
sv_hostname "Legacy Romania"

# Loading a server icon (96x96 PNG file)
load_server_icon logo.png

# Server max players
sv_maxclients 32

# Server license key from https://keymaster.fivem.net
sv_licenseKey "YOUR_LICENSE_KEY_HERE"

# Steam Web API key for Steam authentication (https://steamcommunity.com/dev/apikey)
set steam_webApiKey "none"

# Tags for server browser
sets tags "roleplay, romania, romanian, legacy"

# Server locale (en-US, fr-FR, de-DE, etc.)
sets locale "ro-RO"

# Set an optional server info and connecting banner image url.
# Size doesn't matter, any banner sized image will be fine.
#sets banner_detail "https://url.to/image.png"
#sets banner_connecting "https://url.to/image.png"

# Script hook configuration
set sv_scriptHookAllowed 0

# Whether to enable OneSync (required for 32+ players)
set onesync on

# Server owner information
sets sv_projectName "Legacy Romania"
sets sv_projectDesc "Legacy Romania - Romanian Roleplay Server"

# Server developer information
#sets Developer "YourName"

# Convars which can be used in scripts
set temp_convar "hey world!"

# Uncomment if you're using voice chat
#set setr_enableVoice "true"

# Set resources directory
set resources_dir "server-data/resources"

# Load default resources
ensure mapmanager
ensure chat
ensure spawnmanager
ensure sessionmanager
ensure basic-gamemode
ensure hardcap
ensure rconlog

# Add custom resources below
ensure character-creator
ensure player-persistence
ensure no-npcs

# Discord rich presence configuration (optional)
#set discord_appId "your-app-id"
#set discord_largeImageKey "your-large-image-key"
#set discord_largeImageText "Your Server Name"

# Server commands
add_ace group.admin command allow # allow all commands
add_ace group.admin command.quit deny # but don't allow quit
add_principal identifier.steam:110000XXXXXXXX group.admin # add the admin to the group

# Hide player endpoints in external log output.
sv_endpointprivacy true

# Server player slot reservation (optional)
#sv_reservedSlots 4

# Enable/disable player joining timeout (in milliseconds, 0 to disable)
#sv_maxPlayers 32

# Server enforced game build (optional)
#sv_enforceGameBuild 2699
